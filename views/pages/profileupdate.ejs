<!DOCTYPE html>

<script>
function myFunction() {
    location.reload();
}
</script>

<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container">

<header>
    <% include ../partials/header %>
</header>

<main>
  <div class="Profile">
      <ul>
        <li><%= userProfile._id %></li>
        <li><%= userProfile.email %></li>
        <li><%= userProfile.username %></li>
        <li><%= userProfile.last_name %></li>
        <li><%= userProfile.first_name %></li>
      </ul>
  </div>

  <form action="/profile/update" method="post">
            <p>
              <div>
                <input type="hidden" name="_id" id="_id" value=<%= userProfile._id %> />
                <label for="first_name">First name: </label>
                <input type="text" name="first_name" id="first_name" autofocus />
                <label for="last_name">Last name: </label>
                <input type="text" name="last_name" id="last_name" autofocus />
              </div>
              <div>
                <input type="submit" onclick="myFunction()" />
              </div>
            </p>
  </form>
</main>

<footer>
    <% include ../partials/footer %>
</footer>

</body>
</html>
