<!DOCTYPE html>

<html lang="en">
<head>
    <% include ../partials/head %>
    <link href="/style/event.css" rel="stylesheet">
</head>
<body class="container">

<header>
<% include ../partials/header %>

</header>

<div class="User_Profile">
  <div class="row">
    <section class="col-sm-3">
    <img src="data:image/jpg;base64, <%= userProfile.profile_picture %>" class="img-thumbnail">
      </form>
      </br>
      <div class="Profile_Inforation">
        <ul class="list-group">
          <li class="list-group-item">Email: <%=  userProfile.userRequest.email %></li>
          <li class="list-group-item">Username: <%=  userProfile.userRequest.username %></li>
          <li class="list-group-item">Full name: <%=  userProfile.userRequest.profile.first_name %> <%=  userProfile.userRequest.profile.last_name %></li>
          <li class="list-group-item">Description: <%=  userProfile.userRequest.profile.description %></li>
          <li class="list-group-item">Born in: <%=  userProfile.userRequest.profile.birthday %></li>
        </ul>
      </div>
    </section>
    <div class="col-sm-6">
    <% if (typeof(userProfile.pastEvent) !== 'undefined') { %>
      <% for(var i=0; i < userProfile.pastEvent.length; i++) { %>
        <div class="Event_Display">
          <div class="row">
            <div class="row">
              <form action="/getOneEvent" method="post" name="submit_id" id="<%= i %>" >
                <div class="col-sm-2">
                <input type="hidden" name="_id" id="_id" value="<%= userProfile.pastEvent[i]._id %>" readonly  />
                  <img src="data:image/jpg;base64, <%= userProfile.profile_picture %>" class="img-thumbnail">
                </div>
                <div class="col-sm-6">
                  <input type="hidden" name="name" id="name" value="<%= userProfile.pastEvent[i].name %>" readonly />
                  <h2 class="form-event-heading" > <%= userProfile.pastEvent[i].name %> </h2>
                </div>
                <div class="col-sm-4">
                  <ul class="list-group">
                    <li class="list-group-item"><%= userProfile.pastEvent[i].date %></li>
                  </ul>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-12 ">
                  <li class="list-group-item">Address: <%= userProfile.pastEvent[i].address.building_number %> <%= userProfile.pastEvent[i].address.street_name %>, <%= userProfile.pastEvent[i].address.post_code %> <%= userProfile.pastEvent[i].address.city  %>  </li>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-12 ">
                    <li class="list-group-item" type="description"><%= userProfile.pastEvent[i].description %></li>
                </div>
              </div>
            </form> </br>
          </div>
          </div>
        <% } %>
      <% } else { } %>

  </div>
    <div class="col-sm-3">
      <div class="Profile_About">
          <ul class="list-group">
            <li class="list-group-item">Next destination: <%=  userProfile.userRequest.about.next_destination %></li>
            <li class="list-group-item">Previous destination: <%=  userProfile.userRequest.about.last_destination %></li>
            <li class="list-group-item">From: <%=  userProfile.userRequest.about.from %></li>
            <li class="list-group-item">Job: <%=  userProfile.userRequest.about.job %>, Company : <%=  userProfile.userRequest.about.company %></li>
            <li class="list-group-item">Living actualy in: <%=  userProfile.userRequest.about.living_place %></li>
          </ul>
      </div>

    </div>
  </div>
</div>

<footer>
    <% include ../partials/footer %>
</footer>

</body>
</html>
